.wrapper {
    justify-content: center;
    align-items: center;
}

.backBtn {
    position: fixed;
    top: 30rpx;
    left: 30rpx;
    width: 60rpx;
    height: 60rpx;
}

.headPic {
    width: 100%;
}

.textWrapper {
    padding-top: 30rpx;
    text-align: center;
}

.nameText {
    display: block;
    margin-bottom: 15rpx;
    font-size: 36rpx;
    color: #000;
}

.enjoyText {
    padding: 10rpx 20rpx;
    font-size: 24rpx;
    line-height: 36rpx;
    color: #999;
    border: 1px solid #999;
    border-radius: 2px;
}

.line {
    display: block;
    width: 100%;
    height: 1px;
    margin-top: 45rpx;
}

.midWrapper {
    display: flex;
    width: 100%;
    height: 100rpx;
    padding: 40rpx 0;
}

.column {
    flex: 1;
    margin-top: 10rpx;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.columnPic {
    display: block;
    width: 45rpx;
    height: 45rpx;
    margin: auto;
}

.columnText {
    font-size: 24rpx;
    color: #999;
}

.picsWrapper {
    width: 100%;
}

.pic {
    width: 100%;
    margin-top: 20rpx;
}

.orderTipsWrapper {
    display: flex;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 90rpx;
    justify-content:  space-between;
    align-items: center;
    border-top: 1px solid #EEE;
    background: rgba(255,255,255,0.95)
}

.priceWrapper {
    justify-content: flex-start;
    align-items: center;
    margin-left: 30rpx;
}

.priceNum {
    font-size: 45rpx;
    color: #55CBBD;
}

.priceUnit {
    font-size: 20rpx;
    color: #55CBBD;
}

.orderTipsBtn {
    margin-right: 25rpx;
    padding: 4rpx 50rpx;
    justify-content: center;
    align-items: center;
    border-radius: 3rpx;
    background: #42CDC2;
}

.orderTipsText {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #FFF;
}