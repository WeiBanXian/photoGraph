.wrapper {
    background: #F9F9F9;
}

.banner {
    width: 750rpx;
    height: 500rpx;
}

.swiperWrapper {
    width: 750rpx;
    height: 500rpx;
}

.bannerPic {
    width: 750rpx;
    height: 610rpx;
}

.block {
    width: 100%;
}

.blockText {
    display: block;
    padding: 20rpx;
    font-size: 26rpx;
    color: #666;
}

.row {
    position: relative;
    display: flex;
    height: 100rpx;
    flex-direction: row;
    align-items: center;
    border-bottom: 1px solid #EEE;
    background: #FFF;
}

.label {
    margin: 20rpx;
    font-size: 26rpx;
    color: #333;
}

.value {
    flex: 1;
    margin-right: 20rpx;
    font-size: 28rpx;
    color: #000;
}

.arrow {
    right: 0;
    width: 45rpx;
    height: 45rpx;
    margin: auto;
    margin-right: 20rpx;
}

.radioWrapper {
    display: flex;
    height: 100rpx;
    align-items: center;
}

.radioPic {
    width: 36rpx;
    height: 36rpx;
    margin-left: 80rpx;
}

.radioText {
    margin-left: 20rpx;
    margin-right: 30rpx;
    font-size: 28rpx;
    line-height: 100rpx;
    color: #000;
}

.blank {
    height: 400rpx;
    background: #FFF;
}

.submitBtn {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 90rpx;
    font-size: 32rpx;
    line-height: 90rpx;
    color: #FFF;
    border-radius: 0;
    border-width: 0;
    text-align: center;
    background: #42CDC2;
    z-index: 999;
}

.logoutWrapper {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: #EEE;
}

.logo {
    margin: 30rpx 0;
    width: 160rpx;
    height: 160rpx;
}

.logoutBtn {
    display: block;
    margin-top: 30rpx;
    width: 480rpx;
    height: 75rpx;
    line-height: 75rpx;
    font-size: 36rpx;
}
