.headWrapper {
    display: flex;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 80rpx;
    z-index: 999;
    padding: 10rpx 0;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #EEE;
    background: #FFF;
}

.currentCity {
    flex: 4;
    height: 100%;
    align-items: center;
    font-size: 28rpx;
    line-height: 80rpx;
    color: #000;
    text-align: center;
}

.arrow {
    flex: 1;
    width: 40rpx;
    height: 40rpx;
    margin-left: -40rpx;
    margin-right: 40rpx;
}

.input {
    flex: 12;
    height: 60rpx;
    padding-left: 15rpx;
    font-size: 28rpx;
    color: #000;
    border-radius: 7rpx;
    background: #EEE;
}

.cancel {
    flex: 3;
    height: 100%;
    font-size: 28rpx;
    line-height: 80rpx;
    color: #000;
    text-align: center;
}

.locationList {
    width: 100%;
    margin-top: 100rpx;
    background: #FFF;
}

.row {
    width: 100%;
    padding: 20rpx;
    border-bottom: 1px solid #EEE;
    background: #FFF;
}

.name {
    display: block;
    font-size: 32rpx;
    color: #000;
}

.address {
    font-size: 24rpx;
    color: #AAA;
}