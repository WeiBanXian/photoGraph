.wrapper {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    padding-top: 30rpx;
    background: #F5F5F5;
}

.title {
    display: block;
    margin: 0 20rpx 20rpx 20rpx;
    font-size: 26rpx;
    color: #666;
}

.row {
    display: flex;
    padding: 24rpx 30rpx;
    align-items: center;
    /*justify-content: center;*/
    background: #FFF;
}

.rowText {
    font-size: 28rpx;
    color: #000;
}

.tips {
    display: block;
    margin: 15rpx auto;
    font-size: 20rpx;
    color: #CCC;
    text-align: center;
}