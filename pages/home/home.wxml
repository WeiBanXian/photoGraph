<view>
    <view class="bannerWrapper">
        <swiper class="swiperWrapper" autoplay="true" duration="1000">
            <swiper-item wx:for="{{homeData.bannerData.data}}"  wx:for-index="idx" wx:for-item="item">
                <image class="bannerPic" data-item="{{item.sceneType}}" bindtap="handlerGoToBannerNext" src="{{item.picUrl}}"></image>
            </swiper-item>
        </swiper>
    </view>
    <view class="contentWrapper">
        <view class="midWrapper">
            <view class="titleWrapper">
                <text class="zhTitle">拍摄专题</text>
                <text class="enTitle">PHOTOGRAPHY PROJECT</text>
            </view>
            <view class="priceWrapper">
                <text class="priceNum">{{homeData.priceData.data.price}}</text>
                <text class="priceUnit">元/每小时</text>
            </view>
        </view>
        <view class="picsWrapper">
            <view class="picsRow">
                <image class="pic" src="./../../resource/images/home/street@3x.png" bindtap="handleGoToScene" data-type="1"><view class="picText">街拍写真</view></image>
                <image class="pic" src="./../../resource/images/home/baby@3x.png" bindtap="handleGoToScene" data-type="2"><view class="picText">亲子瞬间</view></image>
                <image class="pic" src="./../../resource/images/home/pet@3x.png" bindtap="handleGoToScene" data-type="3"><view class="picText">宠物生活</view></image>
            </view>
            <view class="picsRow">
                <image class="pic" src="./../../resource/images/home/activityDocument@3x.png" bindtap="handleGoToScene" data-type="4"><view class="picText">活动纪实</view></image>
                <image class="pic" src="./../../resource/images/home/professionalProfile@3x.png" bindtap="handleGoToScene" data-type="5"><view class="picText">职业形象</view></image>
                <image class="pic" src="./../../resource/images/home/productPromotion@3x.png" bindtap="handleGoToScene" data-type="6"><view class="picText">产品宣传</view></image>
            </view>
        </view>
    </view>
</view>