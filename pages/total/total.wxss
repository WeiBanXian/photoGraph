@import "../../pages/home/home.wxss";
@import "../../pages/order/order.wxss";
@import "../../pages/gallery/gallery.wxss";
@import "../../pages/mine/mine.wxss";

.totalWrapper {
    width: 100%;
}

.tabBar {
    display: flex;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 90rpx;
    justify-content: space-around;
    align-items: flex-end;
    background: #F9F9F9;
    z-index: 999;
}

.tabBarBlank {
    height: 100rpx;
}

.tabItem {
    flex: 1;
    display: flex;
    height: 90rpx;
    padding: 10rpx;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: #F9F9F9;
}

.tabIcon {
    display: block;
    width: 50rpx;
    height: 50rpx;
}

.tabText {
    margin-top: 5rpx; 
    font-size: 30rpx;
    color: #333;
}

.unselectedTabText {
    color: #666;
}

