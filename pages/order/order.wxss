.orderWrapper {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background: #F9F9F9;
}

.emptyWrapper {
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
    background: #F9F9F9;
}

.empty {
    width: 20%;
}

.rowWrapper {
    background: #F9F9F9;
}

.row {
    width: 750rpx;
    height: 380rpx;
    background: #FFF;
}

.blank {
    height: 20rpx;
    background: #F9F9F9;
}

.rowContent {
    display: flex;
    flex-direction: row;
	width: 720rpx;
    height: 360rpx;
    position: relative;
    top: 20rpx;
    margin: auto;
    border-radius: 7rpx;
    background: #FFF;
    box-shadow: 1px 1px 10px #888888;
}

.orderStatusText {
	position: absolute;
    top: 50rpx;
    left: -15rpx;
    width: 180rpx;
    height: 60rpx;
    font-size: 28rpx;
    line-height: 60rpx;
    color: #FFF;
    text-align: center;
    z-index: 998;
}

.orderStatusPic {
	position: absolute;
    top: 50rpx;
    left: -15rpx;
    width: 180rpx;
    height: 60rpx;
    z-index: 997;
}

.leftWrapper {
    flex: 8;
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
}

.orderInfoBgPic {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 340rpx;
    height: 360rpx;
}

.orderInfoText {
    display: block;
    z-index: 999;
    color: #FFF;
    font-size: 45rpx;
    text-align: center;
    background: rgba(0,0,0,0);
}

.rightWrapper {
    display: flex;
    flex: 9;
    flex-direction: column;
    justify-content: center;
    text-align: center;
}

.headWrapper {
    text-align: center;
}

.headPic {
    width: 90rpx;
    height: 90rpx;
    border-radius: 45rpx;
}

.nameText {
    display: block;
    margin: 10rpx;
    font-size: 32rpx;
    color: #333;
}

.phoneText {
    display: block;
    font-size: 30rpx;
    color: #AED1DF;
}

.botWrapper {
    margin: 15rpx;
}

.timeWrapper {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 94%;
    margin: auto;
    margin-top: 10rpx;
    margin-bottom: 5rpx;
}

.timePic {
    display: block;
    width: 45rpx;
    height: 45rpx;
}

.timeText {
    display: block;
    width: 267rpx;
    font-size: 24rpx;
    color: #333;
    text-align: left;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.addressWrapper {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 94%;
    margin: auto;
}

.addressPic {
    display: block;
    width: 45rpx;
    height: 45rpx;
}

.addressText {
    display: block;
    width: 267rpx;
    font-size: 24rpx;
    color: #333;
    text-align: left;
    overflow: hidden;
    -webkit-overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    -webkit-text-overflow: ellipsis;
}
