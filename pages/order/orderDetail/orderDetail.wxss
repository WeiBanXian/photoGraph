.wrapper {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background: #F9F9F9;
}

.topWrapper {
    position: relative;
    margin: 0;
    padding: 0;
    height: 500rpx;
    box-sizing: border-box;
}

.bgPic {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    filter: blur(10px);
    -webkit-filter: blur(10px);
}

.topContent {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    z-index: 999;
}

.contentTopWrapper {
    flex: 11;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.cancelText {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    font-size: 34rpx;
    color: #EEE;
}

.priceWrapper {
    justify-content: flex-start;
    align-items: center;
}

.priceNum {
    font-size: 160rpx;
    color: #FFF;
}

.priceUnit {
    font-size: 42rpx;
    color: #FFF;
}

.timingText {
    font-size: 24rpx;
    color: #FFF;
}

.timelengthText {
    font-size: 32rpx;
    color: #FFF;
}

.payText {
    display: block;
    padding: 16rpx 75rpx;
    font-size: 24rpx;
    color: #FFF;
    border-radius: 32rpx;
    background: #E1556B;
}

.statusWrapper {
    flex: 3;
    display: flex;
    flex-direction: column;
    align-self: flex-end;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 120rpx;
    background: rgba(0, 0, 0, 0.3)
}

.statusRowTopWrapper {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 100%;
}

.statusRowBottomWrapper {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    width: 100%;
    margin-top: 15rpx;
}

.statusItem {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-left: 1px;
}

.statusItemTop {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.solidLine {
    width: 120rpx;
    height: 1px;
    background: #FFF;
}

.hollowLine {
    width: 120rpx;
    height: 0;
    border-top: 1px dotted rgba(255, 255, 255, 0.6);
}

.solidCircle {
    width: 20rpx;
    height: 20rpx;
    margin: 5rpx;
    border-radius: 10rpx;
    background: #FFF;
}

.hollowCircle {
    width: 16rpx;
    height: 16rpx;
    margin: 5rpx;
    border-width: 1px;
    border-style: solid;
    border-color: rgba(255, 255, 255, 0.6);
    border-radius: 8rpx;
}

.statusItemText {
    display: block;
    font-size: 20rpx;
    width: 120rpx;
    text-align: center;
    color: #FFF;
}

.statusItemOpacityText {
    display: block;
    font-size: 20rpx;
    width: 120rpx;
    text-align: center;
    color: rgba(255, 255, 255, 0.6);
}

.botWrapper {
    background: #F9F9F9;
}

.block {
    display: flex;
    flex-direction: row;
    width: 100%;
}

.blockText {
    display: block;
    padding: 20rpx;
    font-size: 26rpx;
    color: #666;
}

.row {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    border-bottom: 1px solid #EEE;
    background: #FFF;
}

.label {
    margin: 20rpx;
    font-size: 26rpx;
    color: #333;
    height: 60rpx;
    line-height: 60rpx;
}

.value {
    flex: 1;
    margin-right: 20rpx;
    font-size: 28rpx;
    color: #000;
}

.phonePic {
    right: 0;
    width: 90rpx;
    height: 60rpx;
    margin: auto;
    margin-right: 45rpx;
}

.blank {
    height: 200rpx;
    background: #F9F9F9;
}

.photoBtn {
    display: block;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    font-size: 30rpx;
    padding: 30rpx;
    color: #FFF;
    letter-spacing: 3px;
    text-align: center;
    background: #42CDC3;
}

.payWrapper {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    background-color: rgba(0,0,0,0.5);
    z-index: 999;
}

.payContent {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 600rpx;
    height: 600rpx;
    margin: auto;
    background: #FFF;
}

.payHeader {
    display: flex;
    align-items: center;
    width: 100%;
    height: 20%;
    background: rgba(88,198,218,1);
}

.headText {
    width: 100%;
    text-align: center;
    font-size: 40rpx;
    color: #FFF;
}

.closePay {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    width: 45rpx;
    height: 45rpx;
}

.payRow {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 18%;
    border-bottom: 1px solid #DDD;
}

.payLabel {
    margin-left: 36rpx;
    font-size: 36rpx;
}

.totalAmount {
    margin-right: 36rpx;
}

.switchWrapper {
    display: flex;
    justify-content: center;
    align-items: center;
}

.couponSwitch {
    margin-left: 36rpx;
    margin-right: 36rpx;
}

.switchAmount {
    font-size: 36rpx;
    color: rgba(255,85,75,1);
}

.payAmount {
    margin-right: 36rpx;
    font-size: 36rpx;
    color: rgba(255,85,75,1);
}

.payBtnWrapper {
    display: flex;
    align-items: center;
    position: relative;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: 6% auto;
    width: 80%;
    height: 12%;
    text-align: center;
    background: rgba(255,85,75,1);
}

.payBtn {
    width: 100%;
    font-size: 36rpx;
    color: #FFF;
}
