<view class="wrapper">
    <include src="../../pages/template/loading/loading.wxml" />
    <view class="content">
        <view class="row">
            <image class="icon" src="./../../resource/images/nLogin/newPhone@3x.png"></image>
            <input
                class="input"
                placeholder-class="input-placeholder"
                placeholder-style="color: #DDD;"
                type="number"
                placeholder="手机号码"
                bindinput="handleChangePhoneNum" />
        </view>
        <view class="row">
            <image class="icon" src="./../../resource/images/nLogin/newLock@3x.png"></image>
            <input
                class="input"
                placeholder-class="input-placeholder"
                placeholder-style="color: #DDD;"
                password="true"
                placeholder="密码"
                bindinput="handleChangePassword" />
        </view>
        <view class="forgetWrapper">
            <text class="forgetText">忘记密码？</text>
        </view>
        <view class="button" bindtap="handleLogin">
            <text class="btnText">登录</text>
        </view>
        <view class="bottomWrapper">
            <view class="leftWrapper">
                <text class="leftText">微信登录</text>
            </view>
            <view class="rightWrapper">
                <text class="rightText">注册新用户</text>
            </view>
        </view>
    </view>
</view>
