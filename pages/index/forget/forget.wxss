@import "../../template/alert/alert.wxss";

.wrapper {
    width: 100%;
    background: #FFF;
}

.line {
    width: 100%;
    height: 1px;
    background: #F7F7F7;    
}

.row {
    display: flex;
    width: 100%;
    height: 120rpx;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #F7F7F7;
    background: #FFF;
}

.input {
    flex: 2;
    height: 75rpx;
    margin-left: 30rpx;
    margin-right: 20rpx;
    font-size: 28rpx;
    color: #333;
}

.codeBtn {
    display: flex;
    flex: 1;
    justify-content: flex-end;
    margin-right: 20rpx;
}

.codeText {
    display: block;
    width: 150rpx;
    padding: 15rpx;
    text-align: center;
    border-radius: 5rpx;
    font-size: 28rpx;
    color: #FFF;
    background: #42CDC3;
}

.submitBtn {
    display: block;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    text-align: center;
    background: #42CDC3;
}

.submitText {
    display: block;
    padding: 30rpx;
    color: #FFF;
    letter-spacing: 3px;
}